.container
  .sign_in
    .panel.panel-success
      .panel-heading
        %h1 Sign In
      .panel-body
        = form_tag "/sign_in" do
          .form-inputs
            %br
            .row
              .col-md-12
                = label_tag :email
                = text_field_tag :email, nil, class: "form-control"

            %br
            .row
              .col-md-12
                = label_tag :password
                = password_field_tag :password, nil, class: "form-control"
            %br
            = submit_tag "Sign In", class: "btn btn-success"
